<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/mypage_bt1"
            android:layout_width="205dp"
            android:layout_height="315dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#FFFFFF"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/prescription" />

        <ImageButton
            android:id="@+id/mypage_comp"
            android:layout_width="205dp"
            android:layout_height="315dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/calendar" />

        <ImageButton
            android:id="@+id/mypage_book"
            android:layout_width="205dp"
            android:layout_height="315dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/diagnosis" />

        <ImageButton
            android:id="@+id/mypage_bt4"
            android:layout_width="205dp"
            android:layout_height="315dp"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/medicine_alarm" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="205dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="center"
            android:text="복약 알리미"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="205dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:text="처방약 내역"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="205dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center"
            android:text="예약목록"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="205dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center"
            android:text="진료내역"
            android:textSize="20sp"
            android:textStyle="bold" />

    </GridLayout>

</LinearLayout>