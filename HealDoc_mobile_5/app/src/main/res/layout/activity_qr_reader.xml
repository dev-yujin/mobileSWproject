<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.parsaniahardik.kotlin_generate_qr.MainActivity">

    <EditText
            android:id="@+id/etqr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter String"
            app:layout_constraintBottom_toTopOf="@+id/btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Image"
            app:layout_constraintBottom_toTopOf="@+id/iv"
            app:layout_constraintEnd_toEndOf="@+id/etqr"
            app:layout_constraintStart_toStartOf="@+id/etqr"
            app:layout_constraintTop_toBottomOf="@+id/etqr" />

    <ImageView
            android:id="@+id/iv"
            android:layout_width="189dp"
            android:layout_height="180dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_drug"
            app:layout_constraintEnd_toEndOf="@+id/btn"
            app:layout_constraintStart_toStartOf="@+id/btn"
            app:layout_constraintTop_toBottomOf="@+id/btn" />

    <Button
            android:id="@+id/btn_drug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가까운 약국 찾기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv"
            app:layout_constraintStart_toStartOf="@+id/iv"
            app:layout_constraintTop_toBottomOf="@+id/iv" />

</android.support.constraint.ConstraintLayout>
