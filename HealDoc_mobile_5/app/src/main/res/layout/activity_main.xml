<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/text_name">
    <TextView
            android:text="항공대학병원"
            android:layout_width="229dp"
            android:layout_height="43dp"
            android:id="@+id/txt_app_title" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@+id/btn_QR"
            android:layout_marginTop="16dp" app:autoSizeMaxTextSize="@android:dimen/app_icon_size"
            android:textStyle="bold" android:textAllCaps="false" android:textSize="36sp"/>
    <Button
            android:text="QR"
            android:layout_width="93dp"
            android:layout_height="47dp"
            android:id="@+id/btn_QR" app:layout_constraintRight_toRightOf="parent"
            android:onClick="onClick"
            app:layout_constraintLeft_toRightOf="@id/txt_app_title"
            app:layout_constraintBottom_toBottomOf="@+id/txt_app_title"/>

    <EditText
            android:layout_width="384dp"
            android:layout_height="21dp"
            android:inputType="textMultiLine"
            android:ems="10"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/ln_top"
            app:layout_constraintTop_toBottomOf="@+id/txt_app_title" android:layout_marginTop="20dp"/>
    <TextView
            android:text="홍 길 동    님"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/ln_top" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:id="@+id/txt_name"
            android:textSize="24sp" android:textStyle="bold"/>
    <TextView
            android:text="마지막 진료 날짜"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_last"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_name" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textStyle="bold" android:textSize="18sp"/>
    <TextView
            android:text="0000년 00월 00일"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_last_date"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_last" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_booking" android:text="예약된 날짜"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/txt_last_date"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textSize="18sp" android:textStyle="bold"/>
    <TextView
            android:text="0000년 00월 00일"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_booking_date" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_booking" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="397dp"
            android:layout_height="67dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_booking_date" android:id="@+id/linearLayout">
        <Button
                android:text="예약하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn_booking" android:layout_weight="1"/>
        <Button
                android:text="MY PAGE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn_mypage" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="288dp"
            android:layout_height="61dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintVertical_bias="0.13"
    >
        <TextView
                android:text="병원 운영시간 : 8:00 ~ 16:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_worktime"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:text="병원 전화 번호 : 070 - 1234 - 1234"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_tel"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>